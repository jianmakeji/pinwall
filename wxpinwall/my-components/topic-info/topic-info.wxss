.topicInfo {
   width: 710rpx;
   padding: 20rpx;
   background: #fff;
   box-shadow: 4rpx 4rpx 20rpx 4rpx rgba(153, 153, 153, 0.17);
}

.topicInfo .topic_info {
   width: 100%;
   height: 130rpx;
}

.topicInfo .topic_info .user_avator {
   width: 70rpx;
   height: 70rpx;
   border-radius: 40rpx;
}

.topicInfo .topic_info .user_fullname {
   width: 300rpx;
   height: 30rpx;
   position: absolute;
   margin-top: 0rpx;
   margin-left: 20rpx;
   color: #484848;
   font-size: 26rpx;
}

.topicInfo .topic_info .createAt {
   width: auto;
   height: 30rpx;
   position: absolute;
   margin-top: 40rpx;
   margin-left: 20rpx;
   color: #979797;
   font-size: 20rpx;
}

.topicInfo .topic_info .total_artifact {
   width: auto;
   height: 30rpx;
   line-height:30rpx;
   position: absolute;
   margin-top: 10rpx;
   margin-left: 528rpx;
   color: #979797;
   font-size: 22rpx;
}

.topicInfo .topic_info .topic_name {
   width: 600rpx;
   height: 40rpx;
   position: absolute;
   margin-top: 10rpx;
   margin-left: 20rpx;
   color: #07af69;
   font-size: 30rpx;
   font-weight: bold;
   display: -webkit-box;
   word-break: break-all;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1;
   overflow: hidden;
   text-overflow: ellipsis;
   z-index: 1;
}
.topicInfo .topic_des {
   width:750rpx;
   font-size:24rpx;
   color:#000;
   margin-left:20rpx;
}