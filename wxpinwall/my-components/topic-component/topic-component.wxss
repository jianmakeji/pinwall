.topic_complate {
   width: 710rpx;
   /* height: 400rpx; */
   margin:10rpx auto -30rpx;
   padding: 20rpx;
   background: #efefef;
}

.topic_complate .topic_info {
   width: 670rpx;
   height: 130rpx;
   padding: 20rpx;
   background: #fff;
}

.topic_complate .topic_info .user_avator {
   width: 70rpx;
   height: 70rpx;
   border-radius: 40rpx;
}

.topic_complate .topic_info .user_fullname {
   width: 300rpx;
   height: 30rpx;
   position: absolute;
   margin-top: 0rpx;
   margin-left: 20rpx;
   color: #484848;
   font-size: 26rpx;
}

.topic_complate .topic_info .createAt {
   width: auto;
   height: 30rpx;
   position: absolute;
   margin-top: 40rpx;
   margin-left: 20rpx;
   color: #979797;
   font-size: 20rpx;
}

.topic_complate .topic_info .total_artifact {
   width: auto;
   height: 30rpx;
   line-height:30rpx;
   position: absolute;
   margin-top: 10rpx;
   margin-left: 500rpx;
   color: #979797;
   font-size: 22rpx;
}

.topic_complate .topic_info .topic_name {
   width: 600rpx;
   height: 40rpx;
   position: absolute;
   margin-top: 10rpx;
   margin-left: 20rpx;
   color: #07af69;
   font-size: 30rpx;
   font-weight: bold;
   display: -webkit-box;
   word-break: break-all;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1;
   overflow: hidden;
   text-overflow: ellipsis;
   z-index: 1;
}

.topic_complate .topic_artifacts {
   width: 670rpx;
   height: 130rpx;
   padding: 0 20rpx 20rpx 20rpx;
   display: flex;
   flex-direction: row;
   justify-content: left;
   background: #fff;
}

.topic_complate .topic_artifacts .artifact_img {
   width: 124rpx;
   height: 124rpx;
   margin-top: 10rpx;
   margin-right: 10rpx;
}
